{
  "bsonType": "object",
  "required": ["userId", "cardId", "cardCode", "redeemTime", "cardType", "cardValue"],
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "userId": {
      "bsonType": "string",
      "description": "用户ID"
    },
    "cardId": {
      "bsonType": "string",
      "description": "卡号"
    },
    "cardCode": {
      "bsonType": "string",
      "description": "卡密"
    },
    "redeemTime": {
      "bsonType": "timestamp",
      "description": "兑换时间"
    },
    "cardType": {
      "bsonType": "string",
      "enum": ["daily", "monthly", "times"],
      "description": "卡密类型：daily-日卡, monthly-月卡, times-次卡"
    },
    "cardValue": {
      "bsonType": "int",
      "description": "卡密面值：日卡/月卡为天数，次卡为次数"
    }
  },
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  }
}