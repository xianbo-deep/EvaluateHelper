{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Package",
  "description": "套餐表结构定义",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "套餐ID"
    },
    "package_name": {
      "type": "string",
      "description": "套餐名称"
    },
    "description": {
      "type": "string",
      "description": "套餐描述"
    },
    "metrics": {
      "type": "array",
      "description": "套餐包含的指标列表",
      "items": {
        "type": "object",
        "properties": {
          "metric_id": {
            "type": "string",
            "description": "指标ID"
          },
          "metric_name": {
            "type": "string",
            "description": "指标名称"
          }
        },
        "required": ["metric_id", "metric_name"]
      }
    }
  },
  "required": ["id", "package_name", "metrics"]
}